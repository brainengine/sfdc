<apex:page standardController="Milestone1_Project__c" 
			recordSetVar="projects" extensions="Milestone1_Import_Project_Controller"  
			tabStyle="Milestone1_Import_Project_Template__tab">       
    <style>
    .xmlImportError { color: red; font-weight: strong;}
    </style>
    <apex:pageBlock title="Project XML Import Process">
        <apex:messages styleClass="xmlImportError" />
		<apex:form >
		<apex:pageBlockSection title="Import Local Template XML" collapsible="false">
			<apex:inputFile style="width:100%" fileSize="{!maxFileSize}" id="fileToUpload" value="{!fileBody}" 
				contentType="{!contentType}" filename="{!fileName}" />
			<apex:commandButton action="{!importTemplateXML}" value="Import"></apex:commandButton>
		</apex:pageBlockSection> 
        <apex:pageBlockSection title="Import Template XML from My Personal Documents" rendered="{!IF(docsSize > 0, "true", "false")}" collapsible="false">
        	<apex:selectRadio value="{!docId}" layout="pageDirection"><apex:selectOptions value="{!docOptions}"/></apex:selectRadio>
        	<apex:commandButton action="{!importTemplateXML}" value="Import"></apex:commandButton>
        	</apex:pageBlockSection>
        </apex:form>
     </apex:pageBlock>
</apex:page>